<div class="col-6 cookingCol">

    <div class="card stationCard cooking" data-id="{{this.id}}" data-status="{{this.status}}" style="max-width: 300px;">

        <div class=" card-header cooking-orderHead mx-0 px-1 py-0">
            <div class="row">
                <div class="col-6">
                    <p class="orderHead">Table {{this.orderNumber}}</p>
                </div>

                <div class="col-6 text-right">
                    <i class="far fa-clock text-dark "></i><span id = "time-{{this.id}}" class = "current-time">{{this.currentTime}}</span>
                </div>
            </div>

        </div>
        <div class="card-body cardBody">
            <ul class="  ulStation list-group-flush">
                <li class="  liStation list-group-item">{{this.name}}</li>
            </ul>
        </div>
    </div>
</div>