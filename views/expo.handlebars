<div class="sidebar light-card">

  <div class="dropleft">
    <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
      aria-expanded="false">
      <i class="fas fa-utensils"></i>
