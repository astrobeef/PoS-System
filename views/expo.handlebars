<div class="container expoContainer">
  {{#each items as |item|}}

  {{!-- Modal when order it's clicked --}}
  <div class="row">
    <div class="col">
      <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-md">
          <div class="modal-content">
            <div class="modal-header modalHeader">

              <div class="col-3">
                <p class="tableN ">Table {{item.[0].orderNumber}}</p>

              </div>
              <div class="col-3">
                <p class="tableN"><i class=" far fa-clock text-white "> {{item.[0].currentTime}}</i></p>
              </div>

              <div class="col-3 text-right">
                <i class="  fas fa-times-circle " data-dismiss="modal"></i>
              </div>


            </div>
            <div class="px-2  modal-body">
              <ul class=" ulExpo list-group-flush">
                <li class=" liExpo list-group-item">{{this.name}} <br> <small class="mods">{{this.mods}}</small> </li>



              </ul>

            </div>
            <div class=" modal-footer">
              <div class="col text-right">

                <input id="complete" class="btn btn-success" type="button" value="Complete" data-id="{{this.id}}">

              </div>





            </div>




          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{!-- End of the Modal--}}



  {{!-- card --}}
  <div class="row">
    {{#each items as |item|}}

    {{> item}}


    {{/each}}

  </div>
  {{!-- 
  end of the card --}}
</div>