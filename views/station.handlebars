{{!-- container with orders to cook --}}

<div class="container containerKitchen">
  <div class="row center-align">

    <div class="col-6 text-center">
      <h3 class="stationStart">Start</h3>

    </div>
    <div class="col-6 text-center">
      <h3 class="stationCooking">Cooking</h3>
    </div>
  </div>

  {{!-- orders to be cooked --}}
  <div class="row">
    {{!-- if status of item is "not Started" call partial toCOok handlebar  --}}
    <div class="col-6 startCol">
      <div class="row">

        {{#each NotStarted}}
        {{> toCook}}
        {{/each}}

      </div>



    </div>


    <div class="col-6 cookingCol">

      <div class="row">

        {{#each Working}}
        {{> cooking}}
        {{/each}}

      </div>

    </div>

  </div>

  {{!-- if status of item is "working" call partial cooking handlebar  --}}


</div>